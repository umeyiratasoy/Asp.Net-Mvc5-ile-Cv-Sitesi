@model CvSitesi.Models.Egitim
@{
    ViewBag.Title = "EgitimGetir";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="">
    <h1 class="display-1 text-center">Eğitim</h1>
</div>
<br>



<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            @using (Html.BeginForm("EgitimGuncelle", "Admin", FormMethod.Post))
            {

                <div class="mb-3 row">
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa-solid fa-exclamation"></i> &nbsp;</span>
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.ID, new { @class = "form-control hidden", @readonly = "readonly" })

                            <label for="floatingInputGroup1">Id</label>
                        </div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fa-solid fa-school"></i> &nbsp; Okul Adı</span>
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.OkulAdi, new { @class = "form-control" })

                            @Html.ValidationMessageFor(model => model.OkulAdi, "", new { @class = "text-black" })
                            <label for="floatingInputGroup1">Okul Adı</label>
                        </div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="input-group mb-3">
                        <span class="input-group-text"> <i class="fa-solid fa-school"></i>&nbsp; Bölüm Adı </span>
                        <div class="form-floating">
                            @Html.TextBoxFor(x => x.BolumAdi, new { @class = "form-control" })

                            @Html.ValidationMessageFor(model => model.BolumAdi, "", new { @class = "text-black" })
                            <label for="floatingInputGroup1">Bölüm Adı</label>
                        </div>
                    </div>
                </div>

                <div class="" align="right">
                    <button class="btn btn-dark">Güncelle</button>
                </div>
            }
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>


<div align="center">
    <p>
        <button class="btn btn-danger" type="button" data-bs-toggle="collapse" data-bs-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">Dikkat !</button>
    </p>
    <div class="row">
        <div class="col">
            <div class="collapse multi-collapse" id="multiCollapseExample1">
                <div class="card card-body">
                    <p>Hiçbir kutucuğu boş bırakmayınız.</p>
                </div>
            </div>
        </div>
    </div>
</div>
