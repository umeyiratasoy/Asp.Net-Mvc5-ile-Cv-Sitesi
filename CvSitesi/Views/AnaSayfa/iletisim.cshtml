@model CvSitesi.Models.Iletisim
@{
    Layout = null;
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<div class="container mt-4">
    <form method="post">
        <div class="form-group">
            <label for="exampleFormControlInput1">Ad Soyad</label>
            @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AdSoyad, "", new { @class = "text-black" })
        </div>

        <div class="form-group">
            <label for="exampleFormControlInput1">E-Posta</label>
            @Html.TextBoxFor(x => x.Eposta, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Eposta, "", new { @class = "text-black" })
        </div>

        <div class="form-group">
            <label for="exampleFormControlInput1">Konu</label>
            @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Konu, "", new { @class = "text-black" })
        </div>


        <div class="form-group">
            <label for="exampleFormControlTextarea1">Açıklama</label>
            @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-black" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-secondary mb-2" id="btn1">Gönder</button>
        </div>
    </form>
</div>